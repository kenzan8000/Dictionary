{
    "name": "Dictionary",
    "version": "0.1",
    "manifest_version": 2,

    "description": "Show word's definition when you cursor.",

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "browser_action": {
        "default_icon": "images/icon19_off.png",
        "default_title": "Dictionary"
    },

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
              "js/jquery-1.11.2.js",
              "js/jquery.balloon.js",
              "js/lemmatizer.js",
              "js/wordDictionary.js",
              "js/cursor.js",
              "js/contentScripts.js"
          ],
          //"css": [],
          "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [
        "images/*.png"
    ]
}
